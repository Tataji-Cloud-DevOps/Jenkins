pipeline {
    agent any 
    stages {
        stage('First stage') { 
            steps {
                echo "Welcome world!" 
            }
        }
        stage('Second stage') { 
            steps {
                echo "Welcome Tataji" 
            }
        }
        stage('Third stage') { 
            steps {
               echo "Welcome DevOps"
            }
        }
    }
}


// Here all keywords like pipeline,agentany,stages are all directives.

